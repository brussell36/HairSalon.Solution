@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model HairSalon.Models.Stylist;

<h1>Stylist Details</h1>
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

<ul>
  @if (Model.Count == 0)
  {
    <h3>No clients added yet</h3>
  }
  @foreach (Client client in Model)
  {
    <li>Client: @client.ClientName</li>
  }
</ul>

<h3>@Html.ActionLink("Back to stylists", "Index")</h3>
<h3>@Html.ActionLink("Edit stylist", "Edit", new { id = Model.StylistId })</h3>
<h3>@Html.ActionLink("Delete stylist", "Delete", new { id = Model.StylistId })</h3>