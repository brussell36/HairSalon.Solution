@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist;

<h1>Edit Stylist</h1>

<h4>Edit this stylist: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name, new { @class="form-control" })
  @Html.LabelFor(model => model.Specialty)
  @Html.EditorFor(model => model.Specialty, new {@class="form-control"})
  <input type="submit" value="Save" class="btn btn-primary" />
}

<h4>@Html.ActionLink("Back to stylists", "Index")</h4>
