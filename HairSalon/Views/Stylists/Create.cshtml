@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h3>Add a new Stylist</h3>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {@class="form-control"})
