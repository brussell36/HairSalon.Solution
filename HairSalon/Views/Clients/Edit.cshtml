@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h1>Edit</h1>

<h4>Edit this client: @Html.DisplayFor(model => model.ClientName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)
  @Html.LabelFor(model => model.ClientName)
  @Html.EditorFor(model => model.ClientName, new {@class="form-control"})
  @Html.HiddenFor(model => model.Stylist)
  @Html.DropDownList("StylistId")
  <input type="submit" value="Save" class="btn btn-primary" />
}
<h4>@Html.ActionLink("Back to list", "Index")</h4>